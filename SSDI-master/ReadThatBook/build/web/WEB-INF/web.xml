<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                              http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>admin.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookManager</servlet-name>
        <servlet-class>admin.BookManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileManager</servlet-name>
        <servlet-class>admin.UserProfileManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RatingManager</servlet-name>
        <servlet-class>admin.RatingManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WishlistServlet</servlet-name>
        <servlet-class>admin.WishlistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoogleBooksApiServlet</servlet-name>
        <servlet-class>admin.GoogleBooksApiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactUsServlet</servlet-name>
        <servlet-class>admin.ContactUsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SpamServlet</servlet-name>
        <servlet-class>admin.SpamServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SpamServlet</servlet-name>
        <url-pattern>/SpamServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookManager</servlet-name>
        <url-pattern>/BookManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileManager</servlet-name>
        <url-pattern>/UserProfileManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RatingManager</servlet-name>
        <url-pattern>/RatingManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoogleBooksApiServlet</servlet-name>
        <url-pattern>/GoogleBooksApiServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WishlistServlet</servlet-name>
        <url-pattern>/WishlistServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactUsServlet</servlet-name>
        <url-pattern>/contactUs</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
